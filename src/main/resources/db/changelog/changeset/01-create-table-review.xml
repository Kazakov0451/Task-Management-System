<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="BC-01" author="Vladimirov Sergey">
        <createTable tableName="review" remarks="Отзывы">
            <column name="id" remarks="Идентификатор" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="created_at" remarks="Дата создания" type="timestamp without time zone">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_at" remarks="Дата удаления" type="timestamp without time zone"/>
            <column name="deleted_by_id" remarks="Кто удалил(Идентификатор admin)" type="bigint"/>
            <column name="text" remarks="Текст" type="varchar(2048)"/>
            <column name="like_reaction" remarks="Лайки" type="integer"/>
            <column name="dislike_reaction" remarks="Дизлайки" type="integer"/>
            <column name="user_id" remarks="Идентификатор пользователя написавшего отзыв" type="bigint"/>
            <column name="club_id" remarks="Идентификатор клуба на который написали отзыв" type="bigint"/>
        </createTable>
    </changeSet>
</databaseChangeLog>